<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/sub_cat_width"
    android:layout_height="@dimen/sub_cat_width"
    android:onClick="onSubCategoryClicked"
    android:id="@+id/sub_cat_card"
    android:layout_margin="1dp"
    >

    <LinearLayout
        android:padding="@dimen/activity_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/sub_category_icon"
            android:src="@drawable/literature"            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/first_letter_circle"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sub category goes here"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:id="@+id/sub_category_title"
            android:paddingTop="8dp">

        </TextView>


    </LinearLayout>

</android.support.v7.widget.CardView>