<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="onSubCategoryClicked"
    android:id="@+id/sub_cat_card"
    android:layout_margin="2dp"
    >

    <LinearLayout
        android:padding="@dimen/activity_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/sub_category_icon_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/first_letter_circle"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/sub_category_icon"
                android:src="@drawable/literature_25"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sub category goes here"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:id="@+id/sub_category_title"
            android:paddingTop="8dp">

        </TextView>


    </LinearLayout>

</android.support.v7.widget.CardView>